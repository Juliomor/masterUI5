<mvc:View controllerName="alight.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" displayBlock="true">
    <Panel headerText="{i18n>helloPanel}"
        class = "sapUiResponsiveMargin" width="auto" expandable="{device>/system/phone}"
        expanded = "{= !${device>/system/phone}}">
        <content>
            <Button id = "helloDialogButton"
                text = "{i18n>helloDialog}" press=".onOpenDialog"
                class = "sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop" icon="sap-icon://action"/>
            <Button text = "{i18n>sayHello}" press=".onShowHello"
                class = "sapUiSmallMarginEnd sapUiHideOnDesktop"/>
            <Input value = "{/recipient/name}"
                width = "60%" valueLiveUpdate="true" />
            <Text text="{i18n>Hello} {/recipient/name}"
                class = "sapUiSmallMargin boldElements"/>
        </content>
    </Panel>
    <core:Fragment fragmentName = "alight.sapui5.view.Form01"
        type = "XML"/>
</mvc:View>